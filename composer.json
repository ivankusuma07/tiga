{   
    "name": "tonjoo/tiga",
    "description": "WordPress Faux MVC",
    "keywords": ["tiga", "framework","wordpress","mvc","faux mvc"],
    "license": "MIT",
    "homepage": "http://tonjoo.com",
    "authors": [
        {
            "name": "Todi Adiyatmo Wijoyo",
            "homepage": "http://todiadiyatmo.com"
        }
    ],
    "require-dev": 
    {
        "tonjoo/tiga-framework": "0.1.*"
    },
    "autoload": 
    {
        "classmap": 
        [
            "app\/Controllers",
            "app\/Models"
        ]

    },
    "scripts": {
        "post-install-cmd": [
            "composer dump-autoload"
        ],
        "post-update-cmd": [
            "composer dump-autoload"
        ],
        "post-create-project-cmd": [
            "composer dump-autoload"
        ]
    }
}
